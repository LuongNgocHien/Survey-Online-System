<!DOCTYPE html>
<html>
<head>
	<title>LoginApp</title>
	<link rel="stylesheet" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body>
	 <div class="body-login">
        <fieldset class="content-login">
            <h2>ĐĂNG NHẬP</h2>
            <hr>
                <%
                    var message = message;
                    
                    if(message){
                        %><span class="message"> <%=message %>! </span><%
                    }
                %>
            <form action="/login" method="post" class="login" >
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" name="email" class="form-control username" id="email" />

                    <% 
                        var message = message
                        if(message){ %>
                            <span class="err" id="email_err"> <%=message %> </span>
                       <% }
                     %>

                    
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input name="password" type="password" class="form-control password" id="password">
                    <span class="err" id="password_err"></span>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox"> Remember me</label>
                    <label><a href="/register">Tạo tài khoản mới</a></label>
                </div>
                <input type="submit" class="btn btn-default btn-login" value="Đăng nhập" />
                </form>
        </fieldset>
    </div>
</body>
</html>
<script src="reload/reload.js"></script>